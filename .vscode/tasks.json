{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "ralphIterations",
      "type": "promptString",
      "description": "Number of Ralph iterations",
      "default": "1"
    }
  ],
  "tasks": [
    {
      "label": "Ralph: PRD (codex)",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@iannuttall/ralph", "prd", "--agent=codex"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Ralph: Build 1 (codex)",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@iannuttall/ralph", "build", "1", "--agent=codex"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Ralph: Build N (codex)",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@iannuttall/ralph", "build", "${input:ralphIterations}", "--agent=codex"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Ralph: Overview",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@iannuttall/ralph", "overview"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
